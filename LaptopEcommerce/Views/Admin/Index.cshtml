@{
    ViewData["Page"] = "Admin";
}

@model IEnumerable<LaptopEcommerce.Models.Product>


<div class="flex-parent">
    @foreach (var item in @Model)
    {

        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <h6 class="card-subtitle mb-2 text-muted">@item.Prize</h6>
                <p class="card-text">@item.Details</p>
                <a class="btn btn-info" asp-route-id=@item.ID asp-action="EditProduct">Edit</a>
                <a class="btn btn-danger" asp-route-id=@item.ID asp-action="DeleteProduct">Delete</a>
            </div>
        </div>
    }
</div>



